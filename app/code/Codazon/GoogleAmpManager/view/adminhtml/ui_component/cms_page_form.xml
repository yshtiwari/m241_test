<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="amp" sortOrder="11">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">AMP Content</label>
        </settings>
        <field name="amp_content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" />
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">amp_content</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <!-- <item name="plugins" xsi:type="array">
                        <item name="name" xsi:type="string">cdzampimage</item>
                    </item> -->
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="plugins" xsi:type="array">
                            <item name="0" xsi:type="array"><item name="name" xsi:type="string">cdzampimage</item></item>
                        </item>
                        <item name="settings" xsi:type="array">
                            <item name="menubar" xsi:type="boolean">true</item>
                            <item name="image_advtab" xsi:type="boolean">false</item>
                            <item name="toolbar1" xsi:type="string">magentovariable magentowidget | formatselect | styleselect | fontsizeselect | forecolor backcolor | bold italic underline strikethrough | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent</item>
                            <item name="toolbar2" xsi:type="string"> undo redo  | link anchor table charmap | image media insertdatetime | widget | searchreplace visualblocks  help | hr pagebreak</item>
                            <item name="plugins" xsi:type="string">advlist autolink code colorpicker directionality hr imagetools link media noneditable paste print table textcolor toc visualchars anchor charmap codesample contextmenu help image insertdatetime lists nonbreaking pagebreak preview searchreplace template textpattern visualblocks wordcount magentovariable magentowidget cdzampimage</item>
                        </item>
                        <item name="add_images" xsi:type="boolean">false</item>
                    </item>
                    <item name="notice" xsi:type="string">Please make sure your HTML tags are valid with AMP rule. If this field is empty, the value of "Content" field will be used for AMP version of this page with a HTML filter.</item>
                </item>
            </argument>
        </field>
        <field name="amp_custom_css">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Custom CSS</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">options.amp_custom_css</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="rows" xsi:type="string">10</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="notice" xsi:type="string">Please make sure your CSS is valid with AMP rule.</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
