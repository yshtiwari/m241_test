<?php
$_filters = $block->getActiveFilters();
$helper = $this->helper('Codazon\Shopbybrandpro\Helper\Data');
$brandAttributeCode = $helper->getCurrentAttributeCode() ? : $helper->getStoreBrandCode();

if (!empty($_filters)) {
    foreach ($_filters as $key => $_filter) {
        if ($_filter->getFilter()->getRequestVar() == $brandAttributeCode) {
            unset($_filters[$key]);
            $block->getLayer()->getState()->setFilters($_filters);
            break;
        }
    }
}
echo $block->setTemplate('layer/state.phtml')->toHtml();
?>