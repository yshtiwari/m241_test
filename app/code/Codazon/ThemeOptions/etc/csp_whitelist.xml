<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="font-src">
            <values>
                <value id="fonts-gstatic-com" type="host">fonts.gstatic.com</value>
                <value id="kxcdn-com" type="host">*.kxcdn.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="googleapis-com" type="host">*.googleapis.com</value>
                <value id="google-com" type="host">google.com</value>
                <value id="kxcdn-com" type="host">*.kxcdn.com</value>
                <value id="gstatic-com" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="scontent-cdninstagram-com" type="host">scontent.cdninstagram.com</value>
                <value id="data" type="host">data:</value>
                <value id="kxcdn-com" type="host">*.kxcdn.com</value>
                <value id="amcglobal-sc-omtrdc-net" type="host">amcglobal.sc.omtrdc.net</value>
                <value id="twitter-com" type="host">*.twitter.com</value>
                <value id="googleapis-com" type="host">*.googleapis.com</value>
                <value id="google-com" type="host">google.com</value>
                <value id="gstatic-com" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="googleapis-com" type="host">*.googleapis.com</value>
                <value id="google-com" type="host">google.com</value>
                <value id="gstatic-com" type="host">*.gstatic.com</value>
                <value id="cdn-ampproject-org" type="host">cdn.ampproject.org</value>
                <value id="connect-facebook-net" type="host">connect.facebook.net</value>
                <value id="www-googletagmanager-com" type="host">www.googletagmanager.com</value>
                <value id="googletagmanager-com" type="host">googletagmanager.com</value>
                <value id="kxcdn-com" type="host">*.kxcdn.com</value>
                <value id="platform-twitter-com" type="host">platform.twitter.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="facebook-com" type="host">facebook.com</value>
                <value id="www-facebook-com" type="host">www.facebook.com</value>
                <value id="kxcdn-com" type="host">*.kxcdn.com</value>
                <value id="youtube-com" type="host">youtube.com</value>
                <value id="www-youtube-com" type="host">www.youtube.com</value>
                <value id="platform-twitter-com" type="host">platform.twitter.com</value>
                <value id="google-com" type="host">google.com</value>
            </values>
        </policy>
        <policy id="worker-src">
            <values>
                <value id="blob" type="host">blob:</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="paypal1" type="host">https://www.paypal.com/xoplatform/logger/api/logger</value>
                <value id="cdn-ampproject-org" type="host">cdn.ampproject.org</value>
                <value id="kxcdn-com" type="host">*.kxcdn.com</value>
                <value id="dpm-demdex-net" type="host">dpm.demdex.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>