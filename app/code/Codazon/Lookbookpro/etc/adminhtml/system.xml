                    <field id="items_1420" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Desktop 1420 view</label>
                        <comment><![CDATA[1420px ≤ Screen width < 1600px]]></comment>
                    </field>
                    <field id="items_1280" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
