                        <comment><![CDATA[1280px ≤ Screen width < 1420px]]></comment>
                    </field>
                    <field id="items_980" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Desktop small view</label>
                        <comment><![CDATA[980px ≤ Screen width < 1280px]]></comment>
                    </field>
                    <field id="items_768" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Tablet lanscape view</label>
