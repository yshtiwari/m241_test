                    </field>
                    <field id="items_1900" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Desktop 1900 view</label>
                        <comment><![CDATA[Screen width > 1900px]]></comment>
