                        <comment><![CDATA[320px ≤ Screen width < 480px]]></comment>
                    </field>
                    <field id="items_0" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
