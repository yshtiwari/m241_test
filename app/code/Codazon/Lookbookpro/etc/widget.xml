<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="lookbookpro_featured_looks" class="Codazon\Lookbookpro\Block\Widget\FeaturedLooks" is_email_compatible="true" placeholder_image="Codazon_Lookbookpro::images/featured-looks.png" ttl="86400">
        <label translate="true">Codazon Featured Looks List</label>
        <description translate="true">Show list of selected looks</description>
        <parameters>
            <parameter name="custom_template" xsi:type="text" required="false" visible="true" sort_order="10">
                <label translate="true">Custom Template</label>
                <description translate="true">Leave empty to use default template</description>
            </parameter>
            <parameter name="width" xsi:type="text" required="true" visible="true" sort_order="20">
                <label translate="true">Look Image Width</label>
                <value>1200</value>
            </parameter>
            <parameter name="look_ids" xsi:type="text" required="true" visible="true" sort_order="30">
                <label translate="true">Look IDs</label>
                <description translate="true">ID of looks displayed on the list. Separate IDs by comma (,). E.g., "22,6,23,11". Go to menu Codazon > Lookbook Pro
 > Lookbook Item to create looks.</description>
            </parameter>
            <parameter name="product_image_width" xsi:type="text" required="true" visible="true" sort_order="40">
                <label translate="true">Product Image Width</label>
                <value>300</value>
            </parameter>
            <parameter name="product_image_height" xsi:type="text" required="true" visible="true" sort_order="50">
                <label translate="true">Product Image Height</label>
                <value>300</value>
            </parameter>
            <parameter name="product_width" xsi:type="text" required="true" visible="true" sort_order="60">
                <label translate="true">Dropdown Width</label>
                <description translate="true">The width of dropdown when clicking look points</description>
                <value>200</value>
            </parameter>
            <parameter name="slider_margin" xsi:type="text" visible="true" sort_order="100">
            	<label translate="true">Slide Margin</label>
                <value>0</value>
            </parameter>
            <parameter name="slider_dots" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="70">
                <label translate="true">Show Slider Dots</label>
            </parameter>
            <parameter name="slider_nav" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="80">
                <label translate="true">Show Slider Arrows</label>
            </parameter>
            <parameter name="items_1900" xsi:type="text" visible="true" sort_order="100">
            	<label translate="true">Desktop 1900 view</label>
                <description translate="true"><![CDATA[Window width ≥ 1900. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_1600" xsi:type="text" visible="true" sort_order="110">
            	<label translate="true">Desktop 1600 view</label>
                <description translate="true"><![CDATA[1600 ≤ Window width < 1900. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_1420" xsi:type="text" visible="true" sort_order="120">
            	<label translate="true">Desktop 1420 view</label>
                <description translate="true"><![CDATA[1420 ≤ Window width < 1600. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_1280" xsi:type="text" visible="true" sort_order="130">
            	<label translate="true">Desktop 1280 view</label>
                <description translate="true"><![CDATA[1280 ≤  Window width < 1420. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_980" xsi:type="text" visible="true" sort_order="140">
            	<label translate="true">Desktop Small View</label>
                <description translate="true"><![CDATA[980 ≤  Window width < 1280. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_768" xsi:type="text" visible="true" sort_order="150">
            	<label translate="true">Tablet Lanscape View</label>
                <description translate="true"><![CDATA[768 ≤ Window width < 980. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_480" xsi:type="text" visible="true" sort_order="160">
            	<label translate="true">Tablet Portrait View</label>
                <description translate="true"><![CDATA[480 ≤ Window width < 768. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_320" xsi:type="text" visible="true" sort_order="170">
            	<label translate="true">Mobile Lanscape View</label>
                <description translate="true"><![CDATA[320 ≤ Window width < 480. Default: 1.]]></description>
                <value>1</value>
            </parameter>
            <parameter name="items_0" xsi:type="text" visible="true" sort_order="180">
            	<label translate="true">Mobile Portrait View</label>
                <description translate="true"><![CDATA[Window width < 320. Default: 1.]]></description>
                <value>1</value>
            </parameter>
        </parameters>
    </widget>
</widgets>