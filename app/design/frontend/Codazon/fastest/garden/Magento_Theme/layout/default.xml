<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
	<referenceContainer name="header.panel">
		<container name="header.panel.row" htmlClass="row" htmlTag="div">
				<container htmlClass="col-sm-10 col-md-8" htmlTag="div">
					<container name="header.panel.left" htmlClass="header-panel-left" label="Header Panel Left" htmlTag="div" />						
				</container>
				<container htmlClass="col-sm-14 col-md-16" htmlTag="div">
					<container name="header.panel.right" htmlClass="header-panel-right" label="Header Panel Right" htmlTag="div" />																				
				</container>				
			</container>
	</referenceContainer>
	<referenceContainer name="header.wrapper.content">
		<container htmlClass="header content" htmlTag="div">
			<container htmlClass="row" htmlTag="div">
				<container htmlClass="col-sm-6 col-md-7" htmlTag="div">
					<container name="header.wrapper.left" htmlClass="header-wrapper-left" htmlTag="div" >
						<container name="logo.left" htmlClass="logo-left" htmlTag="div" />
						</container>
				</container>
				<container htmlClass="col-sm-9 col-md-10" htmlTag="div">
					<container name="header.wrapper.center" htmlClass="header-wrapper-center" htmlTag="div" />
				</container>
				<container htmlClass="col-sm-9 col-md-7" htmlTag="div">
					<container name="header.wrapper.right" htmlClass="header-wrapper-right" htmlTag="div" />
				</container>
			</container>
		</container>
	</referenceContainer>
	<referenceContainer name="header.wrapper.bottom" htmlTag="div" htmlClass="header-wrapper-bottom">
		<container name="header.bottom.content" htmlTag="div" htmlClass="header content" before="-" label="Header Bottom Content" >
			<container htmlClass="row cdz-fix-left" htmlTag="div">
				<container htmlClass="col-sm-18 col-md-18" htmlTag="div">
					<container name="header.bottom.center" htmlClass="header-bottom-center" htmlTag="div" >
						<container name="main.menu" htmlTag="div" htmlClass="header-main-menu" after="-" />
						<container name="menu.container" htmlTag="div" htmlClass="menu-container" label="Header Main Menu" />
					</container>
				</container>
				<container htmlClass="col-sm-6 col-md-6" htmlTag="div">
					<container name="header.bottom.right" htmlClass="header-bottom-right pull-right" label="Header Bottom Right" htmlTag="div" >
						<container name="header.wrapper.phone.number" label="Page Header Phone Number"  htmlClass="header-wrapper-phone-number" htmlTag="div" />
					</container>
				</container>
			</container>				
		</container>
	</referenceContainer>
	<move element="store_switcher" destination="header.panel.right" before="-" />
	<move element="store_language" destination="header.panel.right" after="store_switcher" />
	<move element="header.links" destination="header.panel.right" />
	<move element="currency" destination="header.panel.right" after="-" />
	
	<move element="logo" destination="logo.left" />
	<move element="minicart" destination="header.wrapper.right" />
	</body>
</page>
